{
    "extends": "standard",
    "plugins": ["standard", "promise"],
    "parserOptions": {
        "sourceType": "module"
    },
    "env": {
        "node": false
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", "never"]
    }
}
